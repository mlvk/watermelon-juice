{{#ember-wormhole to="navHeaderContainer"}}
  {{headers/fulfillment-info model=model}}
{{/ember-wormhole}}

{{#if model.belongsToSalesOrder}}
  {{ui/drilldown-button
    icon="assignment_turned_in"
    label="Track Inventory"
    completed=trackingCompleted
    onClick=(route-action "track")}}
{{/if}}

{{ui/drilldown-button
  icon="touch_app"
  disabled=(not trackingCompleted)
  label="Review & Sign"
  indicateCompleted=signed
  onClick=(route-action "review")}}

<div class="row center toolbarContainer">
  <div class="card-1">
    {{ui/icon-button
      icon="check"
      label="Submit"
      size="2"
      color=white
      backgroundColor=colors.SKY_BLUE
      onClick=(route-action "submitFulfillment")
      disabled=(not model.pod.isValid)}}
  </div>
</div>
